<% content_for :head do %>
  <style>
    body.ui-lab-shell {
      margin: 0;
      min-height: 100vh;
      background: radial-gradient(circle at center, #ecf4fb 0%, #dde8f4 100%);
      padding: 0;
      display: grid;
      place-items: center;
    }

    .ui-lab-stub {
      width: min(560px, calc(100vw - 24px));
      border: 1px solid #1f2937;
      border-radius: 12px;
      background: #ffffff;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      color: #111827;
      font-family: Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      font-size: 12px;
      line-height: 1.4;
      padding: 10px;
      pointer-events: auto;
    }

    .ui-lab-stub .raa-toolbar-row {
      margin: 0;
    }

    .ui-lab-stub .raa-panel {
      margin-top: 8px;
      border-top: 1px solid #d1d5db;
      padding-top: 8px;
    }
  </style>
<% end %>

<main>
  <section class="ui-lab-stub" id="ui_lab_stub">
    <div class="raa-toast raa-toast-visible">Copied markdown.</div>
    <div class="raa-toolbar-row">
      <button class="raa-btn raa-btn-active" type="button" aria-pressed="true">Select</button>
      <button class="raa-btn" type="button">Copy Markdown</button>
      <a class="raa-btn" href="#">Debug</a>
      <button class="raa-btn" type="button">Close</button>
      <button class="raa-btn raa-btn-danger" type="button">Clear</button>
    </div>
    <div class="raa-panel">
      <div class="raa-item">
        <div class="raa-item-header">.sidebar .btn.btn-primary</div>
        <div class="raa-item-meta">Text: Save</div>
        <div class="raa-item-controls">
          <input type="text" value="layout" aria-label="tag" />
          <select aria-label="priority">
            <option value="">priority</option>
            <option value="P0">P0</option>
            <option value="P1" selected>P1</option>
            <option value="P2">P2</option>
          </select>
        </div>
        <textarea aria-label="notes">Increase horizontal padding and align icon/text baseline.</textarea>
        <button class="raa-btn raa-btn-danger" type="button">Delete</button>
      </div>
    </div>
  </section>
</main>
